{% extends 'layouts/app.html.twig' %}

{% block title %}Teams{% endblock %}

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.7.0.min.js" integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g=" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
{% endblock %}

{% block breadcrumbs %}
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page"><a href="{{ path('teams.index') }}">Teams</a></li>
            <li class="breadcrumb-item active" aria-current="page">Create</li>
        </ol>
    </nav>
{% endblock %}

{% block body %}
    <div class="row m-5">
        <form method="POST" action="{{ path('teams.store') }}">
            <div class="col-12">
                <div class="row">
                    <div class="col-md-4 col-sm-12 mb-3 form-floating">
                        <input required type="text" name="name" class="form-control" id="team" placeholder="Bayern Munich FC">
                        <label for="team" class="form-label">Team Name</label>
                    </div>
                    <div class="col-md-4 col-sm-12 mb-3 form-floating">
                        <input required type="number" id="money_balance" name="money_balance" placeholder="5000.00" class="form-control">
                        <label for="money_balance"  class="form-label">Money Balance</label>
                    </div>
                    <div class="form-floating col-md-4 col-sm-12 mb-3">
                        <input required type="text" name="country" class="form-control" id="country" placeholder="Netherlands">
                        <label for="country" class="form-label">Country</label>
                    </div>
                </div>
            </div>

            <div class="col-12 my-3">
                <select class="select2 form-control"  name="player_ids[]" multiple="multiple">
                    <option value="AL">Alabama</option>
                    <option value="WY">Wyoming</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
{% endblock %}

{% block scripts %}
    <script>
        $(document).ready(function() {
            $('.select2').select2();
        });
    </script>

{% endblock %}
