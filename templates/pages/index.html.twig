{% extends 'layouts/app.html.twig' %}

{% block title %} Home {% endblock %}

{% block breadcrumbs %}
    <div class="text-cent">
       <h3>Top Richest Teams</h3>
    </div>
{% endblock %}


{% block body %}
    <div class="row p-3">
        {% for team in teams %}
            <div class="col-md-4 col-12">
                <div class="card m-3">
                    <div class="card-body">
                        <h5 class="card-title">{{ team.name }}</h5>
                        <p class="card-text">{{ team.moneyBalance }}</p>
                        <p class="card-text">{{ team.country }}</p>
                        <p class="card-text">{{ team.players().count() }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
